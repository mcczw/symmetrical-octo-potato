<% include partials/header %>

<h1>Edit Blog:</h1>
<% if(errors != undefined){ %>
<ul>
<% errors.forEach(function(error){ %>
<li style="color:red"><%= error.msg %></li>
<% }) %>
</ul>
<% } %>

<form method="POST" action="/blogs/edit/<%= blog. _id %>">
<input type="hidden" name="_method" value="PUT" />
<label>Title:</label><br>
<input type="text" name="title" value="<%= blog.title %>"><br>
<label>Body:</label><br>
<textarea name="body" ><%= blog.body %></textarea><br>
<label>Slug:</label><br>
<input type="text" name="slug" value="<%= blog.slug %>"><br>
<label>Author:</label><br>
<input type="text" name="author" value="<%= blog.author.name %>" readonly><br>


<label>Comments:</label><br>
<p><%= blog.comments %> </p>
    
<br>
<label>Category:</label><br>
<input type="text" name="category" value="<%= blog.category %>" readonly><br>


<br>
<input type="submit" value="Edit">
</form>



<% include partials/footer %>
